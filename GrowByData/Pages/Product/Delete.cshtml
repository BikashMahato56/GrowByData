@page
@model GrowByData.Pages.DeleteModel
@{
    ViewData["Title"] = "Delete Product";
}

<div class="text-center">
    <h3 class="display-4">Delete Product</h3>
</div>
<form method="Post">
    <div class="container-fluid col-md-6">
        <div class="row" >
            <input asp-for="@Model.Product.ProductID" type="hidden" />
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="@Model.Product.Name">Name</label>
                    <input asp-for="@Model.Product.Name" disabled class="form-control" />
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label>Discount</label>
                    <input asp-for="@Model.Product.Discount" disabled class="form-control" />
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label>Total Price</label>
                    <input asp-for="@Model.Product.TotalPrice" disabled class="form-control" />
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label>Rating</label>
                    <input asp-for="@Model.Product.Rating" disabled class="form-control" />
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label>Link</label>
                    <input asp-for="@Model.Product.Link" disabled class="form-control" />
                </div>
            </div>
           
        </div>
         <button type="submit" class="btn btn-danger" align="right" style="float:right;">Delete</button>
            <button asp-page="Product/Index" class="btn btn-success" align="right" style="float:right;">Cancel</button>

    </div>
</form>
